{
  "name": "demo-hono-api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "build": "echo '<!> update your package.json <!>' && exit 1",
    "start": "echo '<!> update your package.json <!>' && exit 1",
    "deploy": "wrangler deploy__minify",
    "typegen": "wrangler types__env-interface CloudflareBindings",
    "types:check": "tsc --noEmit",
    "lint": "oxlint",
    "____cloudflare_worker____": "",
    "cloudflare:worker:dev": "wrangler dev src/index.ts",
    "cloudflare:worker:deploy": "wrangler deploy__minify",
    "cloudflare:worker:typegen": "wrangler types__env-interface CloudflareBindings",
    "____nodejs____": "",
    "node:dev": "tsx watch src/index.ts",
    "node:build": "tsc",
    "node:start": "node dist/index.js",
    "____bun____": "",
    "bun:dev": "bun --watch src/index.ts",
    "bun:build": "tsc",
    "bun:start": "bun run dist/index.js",
    "____nextjs____": "",
    "nextjs:dev": "next dev",
    "nextjs:build": "next build",
    "nextjs:start": "next start",
    "____db____": "",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/db/seed/index.ts"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@hono/node-server": "^1.19.0",
    "@hono/zod-validator": "^0.7.2",
    "@react-email/components": "^0.5.0",
    "@react-email/render": "^1.2.2",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.1",
    "hono-pino": "^0.10.2",
    "ioredis": "^5.7.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-email": "^4.2.8",
    "resend": "^6.0.1",
    "totp-generator": "^1.0.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "eslint-plugin-react": "^7.37.5",
    "oxlint": "^1.12.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "wrangler": "^4.30.0"
  },
  "packageManager": "pnpm@10.5.2"
}
